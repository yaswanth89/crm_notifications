<% provide(:title, "Edit roaster") %>
<h1>Update Roaster for <%= @user.name  %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:roaster, url: update_roaster_user_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :mand_off %>
      <%= f.select :mand_off,  options_for_select(User::RoasterConstant::DAYS_ARRAY.each_with_index.map { |x,i| [x, i] },@user.mand_off) , {} , {class: 'form-control'} %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>