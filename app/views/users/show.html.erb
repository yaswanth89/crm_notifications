<div class="row">
	<div class="col-md-3">
		<h3><%= @user.name %></h3>
		<p><%= @user.email %></p>
		<br/>
		<br/>
		<h4>Mandatory Off</h4>
		<p><%= User::RoasterConstant::DAYS_ARRAY[@user.mand_off] %>
		<% if current_user.admin? %>
			<%= link_to "change", roaster_user_path, class: "btn btn-warning btn-xs" %>
		<% end %></p>
		<br/>
		<br/>
		<h4>Leaves taken</h4>
		<% @user.holidays.each do |e| %>
			<p><%= e.at %></p>
		<% end %>
		<% if current_user.admin? %>
			<%= link_to "add leave", holiday_user_path, class: "btn btn-warning btn-xs" %>
		<% end %>
	</div>
	<div class="col-md-9">
		<h2>Your Tasks</h2>
		<% @tasks.each do |e| %>
			<div class="row">
				<div class="col-md-12">
					<h4><%= link_to e.content, e %></h4>
					<p>Scheduled at : <%= e.at.localtime.strftime("%F %H:%M") %></p>
					<p>Created at: <%= e.created_at.localtime.strftime("%F %H:%M") %> </p>
				</div>
			</div>
		<% end %>
	</div>
</div>