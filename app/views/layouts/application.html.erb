<!DOCTYPE html>
<html>
<head>
  <title>Crm2</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<%= yield %>

<%= javascript_include_tag 'application' %>

<% if logged_in? %>
    <script>window.logged_in = true;</script>
<% end %>
</body>
</html>
