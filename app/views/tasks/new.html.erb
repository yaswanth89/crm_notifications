<% provide(:title, 'Create a Task') %>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Create task</h1>
        <%= form_for(:task,url: tasks_create_path ) do |f| %>
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>

            <%= f.label :user_id %>
            <%= f.text_field :user_id, class: 'form-control'  %>

            <%= f.label :at %>
            <%= f.text_field :at, class: 'form-control'  %>

            <%= f.submit "Create task", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>